@model IEnumerable<ReminderMVC.Models.CategoriesModel>

@{
    ViewData["Title"] = "Categorias";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>

                    <a asp-action="Edit" class="btn btn-info"> Edit</a>|
                    <a asp-action="Details" class="btn btn-success">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger"> Delete</a>|
                    <a asp-action="GetByCategoryId" class="btn btn-dark"> GetByCategory</a>
       
                </td>
            </tr>
        }
    </tbody>
</table>